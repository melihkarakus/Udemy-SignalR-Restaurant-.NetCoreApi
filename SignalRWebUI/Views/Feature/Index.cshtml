@model List<ResultFeatureDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Öne Çıkan İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Öne Çıkan Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Öne Çıkan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Öne Çıkan Başlık1</th>
                                <th scope="col">Öne Çıkan İçerik1</th>
                                <th scope="col">Öne Çıkan Başlık2</th>
                                <th scope="col">Öne Çıkan İçerik2</th>
                                <th scope="col">Öne Çıkan Başlık3</th>
                                <th scope="col">Öne Çıkan İçerik3</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Title1</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Title2</td>
                                    <td>@item.Description2</td>
                                    <td>@item.Title3</td>
                                    <td>@item.Description3</td>
                                    <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni Öne Çıkan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

