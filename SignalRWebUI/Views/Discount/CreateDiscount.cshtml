@model CreateDiscountDtos
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">İndirim</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">İndirim Adı</label>
                            <input type="text" class="form-control" asp-for="Title" id="title" placeholder="İndirim Adı">
                            <small id="text" class="form-text text-muted">İndirim Giriniz.</small>
                        </div>
                        <div class="form-group">
                            <label for="amount">Miktar</label>
                            <input type="text" class="form-control" asp-for="Amount" id="amount" placeholder="Miktar">
                            <small id="text" class="form-text text-muted">Miktar Giriniz.</small>
                        </div>
                        <div class="form-group">
                            <label for="description">İndirim Açıklama</label>
                            <input type="text" class="form-control" asp-for="Description" id="description" placeholder="İndirim Açıklama">
                            <small id="text" class="form-text text-muted">İndirim Açıklama Giriniz.</small>
                        </div>
                        <div class="form-group">
                            <label for="imageurl">İndirim Resim</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" placeholder="İndirim Resim">
                            <small id="text" class="form-text text-muted">İndirim Resim Giriniz.</small>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">İndirim Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

