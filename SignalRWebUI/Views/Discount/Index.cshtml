@model List<ResultDiscountDtos>    
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid">
    <h4 class="page-title">İndirim İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">İndirim Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        İndirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İndirim Başlığı</th>
                                <th scope="col">İndirim Miktarı</th>
                                <th scope="col">İndirim Açıklama</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Aktif Yap</th>
                                <th scope="col">Pasif Yap</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Description</td>
                                    <th>@item.Status</th>
                                    <td><a href="/Discount/ChangeStatusTrue/@item.DiscountID" class="btn btn-outline-info">Aktif Yap</a></td>
                                    <td><a href="/Discount/ChangeStatusFalse/@item.DiscountID" class="btn btn-outline-warning">Pasif Yap</a></td>
                                    <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

