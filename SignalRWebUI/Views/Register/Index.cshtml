@model RegisterDtos
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Kayıt Ol</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="/register-login/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="/register-login/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="/register-login/images/form-v6.jpg" alt="form">
            </div>
            <form class="form-detail" method="post">
                <h2>Kayıt Ol</h2>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Name" class="input-text" placeholder="Adınız" required>
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Surname" class="input-text" placeholder="Soyadınız" required>
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Username" class="input-text" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-row">
                    <input type="text" id="your-email" asp-for="Mail" class="input-text" placeholder="Mail Adresi" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
                </div>
                <div class="form-row">
                    <input type="password" id="password" asp-for="Password" class="input-text" placeholder="Şifreniz" required>
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
