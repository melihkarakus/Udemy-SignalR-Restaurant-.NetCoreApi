@model UpdateAboutDtos      
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Hakkımızda</h4>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" asp-for="AboutID" class="form-control" />
                            <label for="title">Hakkımızda Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Hakkımzda Başlık">
                            <small id="text" class="form-text text-muted">Hakkımızda Başlığı Giriniz.</small>
                        </div>
                        <div class="form-group">
                            <label for="description">Hakkımızda İçerik</label>
                            <input type="text" class="form-control" asp-for="Description" id="description" placeholder="Hakkımzda İçerik">
                            <small id="text" class="form-text text-muted">Hakkımızda İçerik Giriniz.</small>
                        </div>
                        <div class="form-group">
                            <label for="image">Hakkımızda Resim</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" id="image" placeholder="Hakkımzda Resim">
                            <small id="text" class="form-text text-muted">Hakkımızda Resim Giriniz.</small>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Hakkımızda Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

