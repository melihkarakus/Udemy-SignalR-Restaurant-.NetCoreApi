@model List<ResultContactDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid">
    <h4 class="page-title">İletişim İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">İletişim Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Lokasyon Adı</th>
                                <th scope="col">Telefon Numaramız</th>
                                <th scope="col">Mail Adresimiz</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Location</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Mail</td>
                                    <td>@item.FooterDescription</td>
                                    <td><a href="/Contact/DeleteContanct/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Contact/UpdateContanct/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Contact/CreateContanct" class="btn btn-outline-primary">Yeni İletişim Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
