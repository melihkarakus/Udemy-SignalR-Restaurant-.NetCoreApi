@model List<ResultSocialMediaDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Sosyal Medya İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Sosyal Medya Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Sosyal Medya</th>
                                <th scope="col">Url</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Title</td>
                                    <td>@item.Url</td>
                                    <td><a href="/SocailMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/SocailMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/SocailMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

