@model List<ResultTestimonialDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Referans Yorum İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Referans Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Referans ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kişi Adı</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Yorumu</th>
                                <th scope="col">Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td>@sayac</td>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Comment</td>
                                    <td><a href="#" class="btn btn-outline-warning">Durum: @item.Status</a></td>
                                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Yorum Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

